<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/coffee_background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
    >

        <ImageView
            android:id="@+id/foodlogo"
            android:layout_width="121dp"
            android:layout_height="189dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/backgroundopacity"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/foodlogo" />

        <TextView
            android:id="@+id/cafehouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/cafe_house"
            android:textColor="@color/backgroundopacity"
            android:textSize="60sp" />

        <android.widget.Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_gradient"
            android:backgroundTint="@null"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_gradient"
            android:backgroundTint="@null"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>